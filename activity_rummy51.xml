<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="12dip"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <TextView android:id="@+id/textview_playerone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player One:" />

            <EditText
                android:id="@+id/edittext_playerone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

            <TextView android:id="@+id/textview_playertwo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player Two:"
                />

            <EditText
                android:id="@+id/edittext_playertwo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

            <TextView android:id="@+id/textview_playerthree"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player Three:"
                />

            <EditText
                android:id="@+id/edittext_playerthree"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

            <TextView android:id="@+id/textview_playerfour"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Player Four:"
                />

            <EditText
                android:id="@+id/edittext_playerfour"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/android_button"
                android:text="Start!"
                />

            <Button
                android:id="@+id/continue_button"
                android:text="Continue"
                android:padding="10dp"
                android:background="@drawable/android_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/edittext_shuffler"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />

            <TableLayout
                android:id="@+id/myTableLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                >
            </TableLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>